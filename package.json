{
  "name": "scrollzzz",
  "version": "0.7.0",
  "description": "Easy scroll-driven interactions using IntersectionObserver",
  "main": "dist/scrollzzz.cjs.js",
  "module": "dist/scrollzzz.esm.js",
  "browser": "dist/scrollzzz.umd.js",
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pldg/scrollzzz.git"
  },
  "scripts": {
    "server": "npx http-server docs/",
    "build": "rollup -c --environment prod",
    "postbuild": "cp ./dist/scrollzzz.iife.js ./docs/scrollzzz.iife.js",
    "dev": "rollup -c -w --environment dev"
  },
  "keywords": [
    "scroll",
    "onScroll",
    "scroll-driven",
    "scroll-direction",
    "scrollytelling",
    "IntersectionObserver",
    "observer",
    "observe",
    "intersect",
    "intersecting",
    "trigger",
    "event",
    "enter",
    "leave",
    "exit",
    "direction",
    "up",
    "down",
    "view",
    "viewport"
  ],
  "author": {
    "email": "luca.poldelmengo@gmail.com",
    "name": "Luca Poldelmengo",
    "url": "https://github.com/pldg"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pldg/scrollzzz/issues"
  },
  "homepage": "https://github.com/pldg/scrollzzz#readme",
  "devDependencies": {
    "rollup": "^2.79.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-terser": "^7.0.2"
  }
}
